# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/grantpilot

# OpenAI Configuration (for AI extraction and Grants Agent)
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=3001
NODE_ENV=development

# Admin API Key for protected endpoints
ADMIN_API_KEY=your_admin_api_key_here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_TTL=900000
RATE_LIMIT_MAX=100

# Email Configuration
# Options for EMAIL_PROVIDER: smtp, console, sendgrid, resend
# RECOMMENDED FOR PRODUCTION: Use 'resend' (works best on Railway/cloud platforms)
EMAIL_PROVIDER=resend
EMAIL_FROM=noreply@grantpilot.com
EMAIL_FROM_NAME=GrantPilot

# Resend Configuration (if using EMAIL_PROVIDER=resend) - RECOMMENDED
# Sign up at https://resend.com (Free tier: 3,000 emails/month, 100/day)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# SMTP Configuration (if using EMAIL_PROVIDER=smtp)
# For Gmail: use smtp.gmail.com:587 with an App Password
# NOTE: SMTP may not work on Railway due to port restrictions
# IMPORTANT: Remove any comments after values - they will be included in the value!
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SendGrid Configuration (if using EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Frontend URL (for unsubscribe links)
FRONTEND_URL=http://localhost:5173

# Solana Configuration (for token gating)
# RPC endpoint for checking token balances
# Mainnet: https://api.mainnet-beta.solana.com
# Devnet: https://api.devnet.solana.com
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
